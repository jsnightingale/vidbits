<div class="contents-container">
  <div class="video-card">

    <div id="video-title" class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <div id="video-url">
      <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>
    </div>

    <div id="video-description" class="video-description">
      <p>{{video.description}}</p>
    </div>

    <div id="edit">
      <a href="/videos/update/{{video._id}}" id="edit-button" class="input-button">Edit Video</a>
    </div>
    <form id="delete" class="delete-form" action="/videos/delete/{{video._id}}" method="post">
      <input type="submit" class="input-button" id="delete-button" value="Delete" />
    </form>
    <div id="comments">
      {{#each comments as |comment|}}
        <div class="comment">
          <div class="message">
            {{comment.message}}
          </div>
          <div class="author">
            {{comment.author}}
          </div>
        </div>
      {{/each}}
      <a href="/videos/{{video._id}}/comment/add" class="input-button" id="comment-button">Add Comment</a>
    </div>
  </div>
</div>
