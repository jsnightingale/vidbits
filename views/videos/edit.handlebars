<div class="contents-container" id="edit-container">
  <form action="/videos/update/{{video._id}}" method="post">
    <div id="title">
      {{#with video.errors.title as |error|}}
        <span class="error">{{error.message}}</span>
      {{/with}}
      <input type="text" placeholder="Title" name="title" id="video-title" value="{{video.title}}" />
    </div>

    <div id="description">
      {{#with video.errors.description as |error|}}
        <span class="error">{{error.message}}</span>
      {{/with}}
      <textarea placeholder="Description" name="description" id="video-description">{{video.description}}</textarea>
    </div>

    <div id="url">
      {{#with video.errors.url as |error|}}
        <span class="error">{{error.message}}</span>
      {{/with}}
      <input type="text" placeholder="Url" name="url" id="video-url" value="{{video.url}}" />
    </div>

    <input type="submit" class="input-button" id="update-button" value="Update Video">
  </form>
</div>
